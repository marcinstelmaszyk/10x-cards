---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import { Toaster } from "@/components/ui/sonner";
import { UserNav } from "@/components/auth/UserNav";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
// Transform user data to match UserNav's expected interface
const userInfo = Astro.locals.user ? { email: Astro.locals.user.email || "" } : undefined;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <header class="w-full p-4 fixed top-0 z-10">
      <div class="container mx-auto flex justify-end">
        <UserNav user={userInfo} client:load />
      </div>
    </header>
    <div class="pt-16">
      <slot />
    </div>
    <Toaster richColors closeButton />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
